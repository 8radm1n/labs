set routing-options router-id {{ interfaces.loopbacks.ipv4_address }}
{% for router in other_routers %}
set protocols isis interface ge-0/0/{{ router }}.0
{% endfor %}
set protocols isis interface lo0.0 passive

{% for router in other_routers %}
set interfaces ge-0/0/{{ router }}.0  family iso
{% endfor %}
set interfaces lo0 unit 0 family iso address 49.0001.0001.0255.2553.00
